---
import ProjectList from "../storyblok/ProjectList.astro";
---

<script>
  import { animate, stagger, onScroll } from "animejs";

  animate("#projects-title", {
    opacity: [0, 1],
    translateY: [20, 0],
    easing: "easeOutQuad",
    duration: 800,
    autoplay: onScroll({ container: "#projects-section" }),
  });

  animate("#projects-section li", {
    opacity: [0, 1],
    translateY: [20, 0],
    easing: "easeOutQuad",
    duration: 1000,
    delay: stagger(100),
    autoplay: onScroll({ container: "#projects-section" }),
  });

  animate("#projects-more-container", {
    opacity: [0, 1],
    translateY: [20, 0],
    easing: "easeOutQuad",
    duration: 1200,
    autoplay: onScroll({ container: "#projects-section" }),
  });
</script>

<section id="projects-section" class="space-y-3">
  <h1 id="projects-title" class="text-xl font-semibold">üñ•Ô∏è My Projects</h1>
  <ProjectList />
  <div class="mt-5 flex justify-center md:mt-7">
    <a
      href="/projects/1"
      class="text-link underline hover:opacity-95 active:opacity-90"
    >
      <span class="text-link font-semibold">See More Projects</span>
    </a>
  </div>
</section>
