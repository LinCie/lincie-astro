---
import ProjectList from "../storyblok/ProjectList.astro";
---

<script>
  import { animate, stagger, onScroll } from "animejs";

  animate("#projects-title", {
    opacity: [0, 1],
    translateY: [20, 0],
    easing: "easeOutQuad",
    duration: 800,
    autoplay: onScroll({ container: "#projects-section" }),
  });

  animate("#projects-section li", {
    opacity: [0, 1],
    translateY: [20, 0],
    easing: "easeOutQuad",
    duration: 1000,
    delay: stagger(100),
    autoplay: onScroll({ container: "#projects-section" }),
  });
</script>

<section id="projects-section" class="space-y-3">
  <h1 id="projects-title" class="text-xl font-semibold">üñ•Ô∏è My Projects</h1>
  <ProjectList />
</section>
